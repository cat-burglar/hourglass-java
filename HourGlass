import java.util.Scanner;

/*
 * creating an hourglass depending on user input
 */

public class HourGlass{
    static int count = 1;
    static int LINE = 1;
    
   public static void main(String []args) {
   
    drawHourGlass(LINE,3);  
   }
   
public static void drawHourGlass(int LINE, int numInput) {
    int asterisk = numInput; 
    if(LINE < 1 ) {
      return;
    } else if(LINE == numInput) {
      count = -1;  
    }
    
    //draw spaces
    for(int i = LINE; i > 1 ; i--) {
      System.out.print(" ");
      asterisk--;
    }

    // draw asterisks
    while(asterisk > 0) {
      System.out.print("* ");
      asterisk--;   
    }
    System.out.println();
    
    drawHourGlass(LINE+=count,numInput);
    return;
  }
}
