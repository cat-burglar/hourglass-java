import java.util.Scanner;

/*
 * creating an hourglass depending on user input
 */

public class HourGlass{
    static int count = 1;
    
   public static void main(String []args) {
    Scanner in = new Scanner(System.in);
    System.out.println("Please input number: ");
    int number = in.nextInt();
    hourGlass(number);
      
   }
 
   public static void hourGlass(int numInput) {
    String hgString = "";
    hgString = drawHourGlass(hgString,numInput,0);
    System.out.println(hgString);
   }
     
    public static String drawHourGlass(String hgString, int numInput, int line) {
      int n = numInput; 
      if(line < 0 || numInput < 0 ) {
        count = 1;
        return hgString;
      }
      
      if(line == numInput) {
        count = -1;
        line--;
      } else {
        //System.out.println();
        hgString += "\n";
        
      //draw spaces
      for(int i = line; i > 0 ; i--) {
        //System.out.print("");
        hgString += " ";
        n--;
      }
        
      // draw asterisks
      while(numInput > 0) {
        //System.out.print("*");
        hgString += "* ";
        n--;
      }
    }
    hgString = drawHourGlass(hgString,numInput,line+=count);
    return hgString;
  }
}
