import java.util.Scanner;

/*
 * creating an hourglass depending on user input
 */

public class HourGlass{
    static int count = 1;
    static int numInput;
    
   public static void main(String []args) {
   
    Scanner s = new Scanner(System.in);
    System.out.println("Enter a number");
     
    if(s.hasNextInt()) {
      numInput = s.nextInt();
    }
    drawHourGlass(1);  
   }
   
public static void drawHourGlass(int line) {
    int asterisk = numInput; 
    if(line < 1 ) {
      return;
    } else if(line == numInput) {
      count = -1;  
    }
    
    //draw spaces
    for(int i = line; i > 1 ; i--) {
      System.out.print(" ");
      asterisk--;
    }

    // draw asterisks
    while(asterisk > 0) {
      System.out.print("* ");
      asterisk--;   
    }
    System.out.println();
    
    drawHourGlass(line+=count);
    return;
  }
}
